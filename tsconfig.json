{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "jsx": "preserve",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@/components/*": ["./src/components/*"],
            "@/utils/*": ["./src/utils/*"],
            "@/layout/*": ["./src/layout/*"],
            "@/pages/*": ["./src/pages/*"],
            "@/apis/*": ["./src/apis/*"],
            "@/enums/*": ["./src/enums/*"],
            "@/store/*": ["./src/store/*"],
            "@/hooks/*": ["./src/hooks/*"],
            "@/mock/*": ["./src/mock/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.vue"],
    "types": ["vite/client"] // 添加 Vite 的类型支持
}
