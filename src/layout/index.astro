---
import Body from './components/body.vue';
interface Props {
    title?: string;
}

const { title } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>

    <Body client:only="vue">
        <slot />
    </Body>

    <script src="http://at.alicdn.com/t/c/font_4412576_du2o2qahip6.js"></script>

    <style is:global lang="scss">
        @use '@/style/var.scss';
        @use '@/style/animation.scss';
        * {
            padding: 0;
            margin: 0;
        }
        @font-face {
            font-family: 'source-heiti-light';
            src: url('../../public/fonts/SourceHanSansSC-Light-2.otf');
        }
        @font-face {
            font-family: 'jetbrains-mono';
            src: url('../../public/fonts/JetBrainsMono-Regular.ttf');
        }
    </style>
</html>
